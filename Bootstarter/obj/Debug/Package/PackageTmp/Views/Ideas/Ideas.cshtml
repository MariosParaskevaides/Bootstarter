@model IEnumerable<Bootstarter.Models.Idea>

@{
    ViewBag.Title = "Ideas";
}

<h2>@ViewBag.Title</h2>

<a href="@Url.Action("Create New", "Create")" class="btn btn-info">Create New Idea</a>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Founder.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Goal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoneyGathered)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cancelled)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="table-secondary">
            <td>
                @Html.DisplayFor(modelItem => item.Founder.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Goal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoneyGathered)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cancelled)
            </td>
            <td>
                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </p>
            </td>
        </tr>
    }

</table>
