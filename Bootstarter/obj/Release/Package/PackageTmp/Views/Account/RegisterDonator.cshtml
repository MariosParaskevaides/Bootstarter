@model Bootstarter.Models.RegisterDonatorViewModel
@{
    /**/

    ViewBag.Title = "Register as Donator";
}

<h2 class="text-center text-info">@ViewBag.Title</h2>

@using (Html.BeginForm("RegisterDonator", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4 class="text-center text-secondary">Create a new account</h4>
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label offset-3" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-sm-8 offset-3" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label offset-3" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control col-sm-8 offset-3" })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label offset-3" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control col-sm-8 offset-3" })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label offset-3" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control col-sm-8 offset-3" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label offset-3" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-sm-8 offset-3" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.CardNumber, new { @class = "col-md-2 control-label offset-3" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.CardNumber, new { @class = "form-control col-sm-8 offset-3" })
                @Html.ValidationMessageFor(model => model.CardNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.CardOwner, new { @class = "col-md-2 control-label offset-3" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.CardOwner, new { @class = "form-control col-sm-8 offset-3" })
                @Html.ValidationMessageFor(model => model.CardOwner, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.CardType, new { @class = "col-md-2 control-label offset-3" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(m => m.CardType, "--Choose Card Type--", new { @class = "form-control col-sm-8 offset-3" })
                @Html.ValidationMessageFor(model => model.CardType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Month, new { @class = "col-md-2 control-label offset-3" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(m => m.Month, "--Choose Month--", new { @class = "form-control col-sm-8 offset-3" })
                @Html.ValidationMessageFor(model => model.Month, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Year, new { @class = "col-md-2 control-label offset-3" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Year, new { htmlAttributes = new { @type = "number", @min = $"{DateTime.Now.Year}", @step = "1", @max = $"{DateTime.Now.AddYears(5).Year}", @class = "col-sm-8 offset-3" } })
                @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CVV, new { @class = "col-md-2 control-label offset-3" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.CVV, new { @class = "form-control col-sm-8 offset-3" })
                @Html.ValidationMessageFor(model => model.CVV, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(m => m.UserRoles)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary col-md-6 offset-4" value="Register" />
            </div>
        </div>
    </div>
}
<hr />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

