@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "form-inline" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav justify-content-end">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" , @class = "nav-link" })
        </li>        
        <li><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav justify-content-end">
        <li>@Html.ActionLink("Register as Founder", "RegisterFounder", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" , @class="nav-link"})</li>
        <li>@Html.ActionLink("Register as Donator", "RegisterDonator", "Account", routeValues: null, htmlAttributes: new { id = "registerLink2", @class = "nav-link" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class="nav-link" })</li>
    </ul>
}
